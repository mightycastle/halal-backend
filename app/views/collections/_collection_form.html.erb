
<div class="form_add_new_collection">
  <%= simple_form_for(@collection, wrapper: 'collection', :multipart => true, :validate => true) do |f| %>
    <div class="row">
      <div class='col-md-4'>
        <%= hidden_field_tag 'admin', true %>
        <%= f.input :name, placeholder: 'Name', input_html: { class: 'form-control' } %>
        <%= f.input :description, placeholder: 'Description', input_html: { class: 'form-control' }%>
        <div class="control-group">
          <% if @collection.id.present? %>
            <img src="<%= @collection.image_url %>" alt="<%= @collection.name %>" class="jtooltip" title="<%= @collection.name %>" />
          <% end %>
          <%= f.label :image, t('collections.choose_new_image'), class: 'btn btn-default mg-bt-10 border-radius-5 form-control label_for_choose_menu' %>
          <%= f.file_field :image, :name => 'collection_image[image]', :multiple => false , class: 'form-control'%>
          <label class='hide collection-image-error'> <%= t('collections.please_choose_image') %> </label>
        </div>
      </div>
    </div>
    <div class="backend">
      <button id='submit_collection' class="btn btn-submit" type="submit">
        <%= t('layout.submit') %>
      </button>
    </div>
  <% end %>
</div>

