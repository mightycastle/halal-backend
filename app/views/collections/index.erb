<%= render 'shared/restaurant_manage_tabs' %>

<div class="row">
  <div class="col-lg-12">
    <h3 id="restaurant_collections" class="title"><%=t 'collections.title' %></h3>

    <span class='new-restaurant-button'>
      <%= link_to new_collection_collections_path, class: "btn btn-success fa fa-plus-circle" do %>
        <span class="open-san"><%= t('collections.new') %></span>
      <% end %>
    </span>

  </div>
</div>

<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th style="width: 20%"><%= sort_link @search, :name, "Collection name" %></th>
    <th style="width: 170px">Image</th>
    <th><%= sort_link @search, :description, "Description" %></th>
    <th><%= sort_link @search, :disabled, "Status" %></th>
    <th style="width: 25%">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @collections.each_with_index do |collection, index| %>
      <tr="collection_<%= collection.id %>">
        <td><%= collection.name %></td>
        <td class="collection_image_column" >
          <img src="<%= collection.image_url %>" alt="<%= collection.name %>" class="jtooltip" title="<%= collection.name %>" />
        </td>
        <td><%= collection.description %></td>
        <td id="status_label_<%= collection.id %>"><%= text_disabled collection.disabled %></td>
        <td>
          <div class="btn-group btn-group-xs">
            <%= link_to edit_collection_path(collection.id), class: "btn btn-default fa fa-edit", title: 'Edit' do %>
                <span class="open-san"><%= t('collections.edit') %></span>
            <% end %>
            <%= disable_collection_button collection %>
            <%= remove_collection_button collection %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<p>
  <%= paginate @collections, :theme => "twitter-bootstrap-3"%>
</p>

<script>
  $('.carousel').carousel({
    interval: false
  })
</script>