<div class="collection-restaurants-list">
  <h3>Restaurants</h3>
  <table class="table table-condensed table-striped">
    <thead>
    <tr>
      <th style="width: 20%">Restaurant name</th>
      <th style="width: 25%">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @collection.restaurants.each do |cr| %>
        <tr id="restaurant_<%= cr.id %>">
          <td><%= cr.name %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= remove_collection_restaurant_button @collection, cr %>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>