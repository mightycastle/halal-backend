<%= simple_form_for(@user, html: {class: "form-horizontal"}, validate: true) do |f| %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :im %>
  <%= f.input :avatar, as: "file" %>
  <%= f.input :status, :collection => User::STATUS, :as => :radio_buttons%>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit , class: "btn btn-primary"%>
      <%= link_to "Cancel", users_path, class: "btn"%>
    </div>
  </div>
<% end %>

