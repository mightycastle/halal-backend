<div class="page-header">
  <h1>Listing restaurants</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Cover</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Owner</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.id %></td>
        <td><%= restaurant.name %></td>
        <td><%= link_to(image_tag(restaurant.cover.image.thumb("80x80#").url), restaurant_info_path(restaurant.slug), :title=>"Go to the #{restaurant.name} detail.") if restaurant.cover%></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.user.username if restaurant.user_id %></td>
        <td><%= restaurant.description %></td>
        <td>
          <div class="btn-group">
            <%= link_to ' Show', user_restaurant_path(restaurant.slug), class: "btn btn-info icon-file" %>
            <%= link_to ' Edit', edit_user_restaurant_path(restaurant.slug), class: "btn btn-warning icon-edit" %>
            <%= link_to ' Destroy', user_restaurant_path(restaurant.slug), method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-danger icon-remove" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

