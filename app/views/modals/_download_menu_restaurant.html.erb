<% if @restaurant.menus.length > 0 %>
  <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
    <div class="default-btn pull-right download-menu-button" >Download menus</div>
    <!-- Modal -->
    <div class="modal fade" id="download-menu-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title color-blue-title" id="myModalLabel"><%= t('restaurant.popup_title_menu') %></h4>
          </div>
          <div class="modal-body">
            <table id="menus-table" class="table table-condensed table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th class='menu-action'>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @restaurant.menus.each do |m| %>
                  <%= menu_row_user m %>
                <% end %>
              </tbody>
          </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>